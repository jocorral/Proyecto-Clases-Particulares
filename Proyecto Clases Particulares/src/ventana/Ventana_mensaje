	/**
	 * Create the frame.
	 */
	public Ventana_mensaje() {
		
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 602, 400);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		contentPane.setLayout(null);
		
		JButton btnNewButton = new JButton("Atras");
		btnNewButton.addActionListener(new ActionListener() {
		
			public void actionPerformed(ActionEvent e) {
		
				contentPane.setVisible(false); //you can't see me!
				DestruirFrame();
			
			}
		});
		btnNewButton.setBounds(45, 324, 219, 29);
		contentPane.add(btnNewButton);
		
		JButton btnNewButton_1 = new JButton("Enviar");
		btnNewButton_1.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				
				//estaRelleno = enviar();
				
				DateFormat dateFormat = new SimpleDateFormat("yyyy/MM/dd HH:mm:ss");
				Date date = new Date();
				System.out.println(dateFormat.format(date));
				
				if(estaRelleno==false){
				
					String message="Debe rellenar los campos";
					System.out.println(message);
				JOptionPane.showMessageDialog(contentPane, message,"¡Casillas vacías!", JOptionPane.ERROR_MESSAGE);
				
					
					}
					
				else{								
							para = textField.getText();
							departe = textField_1.getText();
							asunto = textField_2.getText();
							mensaje = textPane1.getText();
							System.out.println(para +departe+asunto+mensaje);
							
							Mensaje nuevoMensaje = new Mensaje(date, mensaje, asunto, departe, para);
				}
			}
		});
		btnNewButton_1.setBounds(346, 324, 206, 29);
		contentPane.add(btnNewButton_1);
		
		JLabel lblDestinatario = new JLabel("Para");
		lblDestinatario.setBounds(23, 19, 32, 16);
		contentPane.add(lblDestinatario);
		
		textField = new JTextField();
		textField.setBounds(113, 13, 315, 28);
		contentPane.add(textField);
		textField.setColumns(10);
		
		JLabel lblNewLabel = new JLabel("De parte de:");
		lblNewLabel.setBounds(23, 59, 85, 16);
		contentPane.add(lblNewLabel);
		
		textField_1 = new JTextField();
		textField_1.setBounds(113, 53, 315, 28);
		contentPane.add(textField_1);
		textField_1.setColumns(10);
		
		JLabel lblContenido = new JLabel("Contenido:");
		lblContenido.setBounds(225, 122, 75, 16);
