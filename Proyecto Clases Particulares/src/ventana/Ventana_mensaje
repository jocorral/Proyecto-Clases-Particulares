	public boolean enviar(){

		para = textField.getText();
		departe = textField_1.getText();
		asunto = textField_2.getText();
		mensaje = textPane1.getText();
		
		estaRelleno=true;
		if(para.equals("")  ||departe.equals("") || asunto.equals("") || mensaje.equals("")){
			
			estaRelleno=false;		
			System.out.println(estaRelleno);
		}					
		
		System.out.println(estaRelleno);
		
		return estaRelleno;	   
				  
		}
}
